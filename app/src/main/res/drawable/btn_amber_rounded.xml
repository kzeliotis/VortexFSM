<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:state_enabled="false"
        android:drawable="@drawable/state_disabled_rounded">
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/amber_100" />
            <stroke
                android:width="1dp"
                android:color="@color/light_blue_700" />
            <corners android:radius="@dimen/dp_10" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/amber_50" />
            <stroke
                android:width="1dp"
                android:color="@color/light_blue_400" />
            <corners android:radius="@dimen/dp_10" />
        </shape>
    </item>

</selector>
