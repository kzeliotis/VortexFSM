<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/tvNewAssignmentResources"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/select_resource"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/grey_900"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:baselineAligned="false">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNewAssignmentStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/start_date"
            android:textColorHint="@color/grey_600">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewAssignmentStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/grey_900"
                android:background="@drawable/rounded_edittext_white"
                android:inputType="none"
                android:focusableInTouchMode="false"
                android:longClickable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="@dimen/dp_16"
            android:layout_height="match_parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNewAssignmentStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/start_time"
            android:textColorHint="@color/grey_600">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewAssignmentStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/grey_900"
                android:background="@drawable/rounded_edittext_white"
                android:inputType="none"
                android:focusableInTouchMode="false"
                android:longClickable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:baselineAligned="false">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNewAssignmentEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/end_date"
            android:textColorHint="@color/grey_600">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewAssignmentEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/grey_900"
                android:background="@drawable/rounded_edittext_white"
                android:inputType="none"
                android:focusableInTouchMode="false"
                android:longClickable="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="@dimen/dp_16"
            android:layout_height="match_parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNewAssignmentEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/end_time"
            android:textColorHint="@color/grey_600">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewAssignmentEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/grey_900"
                android:background="@drawable/rounded_edittext_white"
                android:inputType="none"
                android:focusableInTouchMode="false"
                android:longClickable="false"/>

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnSendChanges"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/send_changes"
        android:textStyle="bold"
        android:background="@drawable/rounded_button_blue" />

</LinearLayout>

