<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llItemsRvNameChevron"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_layout_blue"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_2"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:padding="@dimen/dp_12"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/tvExpand"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_expand"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>

        <TextView

            android:visibility="gone"
            android:id="@+id/tvItemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <CheckBox
        android:visibility="gone"
        android:id="@+id/chkSelectToAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tvChevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_chevron_right_blue_24dp"/>

</LinearLayout>
