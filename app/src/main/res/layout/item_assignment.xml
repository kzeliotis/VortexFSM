<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvAssignment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_2"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    app:cardBackgroundColor="@color/light_blue_50"
    app:cardElevation="@dimen/dp_2"
    app:cardCornerRadius="@dimen/dp_10">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_6"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tvProjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAppearance="?attr/textAppearanceListItem"
            android:drawableStart="@drawable/ic_assignment_orange_24dp"
            android:drawableLeft="@drawable/ic_assignment_orange_24dp"
            android:drawablePadding="@dimen/dp_6" />

        <TextView
            android:id="@+id/tvAssignmentsStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_arrow_up_down_blue_24dp"
            android:drawableLeft="@drawable/ic_arrow_up_down_blue_24dp"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_2"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textAppearance="?attr/textAppearanceListItem"
            android:drawableStart="@drawable/ic_people_teal_24dp"
            android:drawableLeft="@drawable/ic_people_teal_24dp"
            android:drawablePadding="@dimen/dp_6" />

        <TextView
            android:id="@+id/tvServiceDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textAppearance="?attr/textAppearanceListItem"
            android:drawableStart="@drawable/ic_build_purple_24dp"
            android:drawableLeft="@drawable/ic_build_purple_24dp"
            android:drawablePadding="@dimen/dp_6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvAssignmentTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textAppearance="?attr/textAppearanceListItemSmall"
                android:layout_weight="10"
                android:drawableStart="@drawable/ic_access_alarm_pink_24dp"
                android:drawableLeft="@drawable/ic_access_alarm_pink_24dp"
                android:drawablePadding="@dimen/dp_6" />

            <TextView
                android:id="@+id/tvTimeTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_2"
                android:gravity="center_vertical|end"
                android:textColor="@color/black"
                android:textAppearance="?attr/textAppearanceListItem" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:textAppearance="?attr/textAppearanceListItemSmall"
                android:layout_weight="10"
                android:drawableStart="@drawable/ic_place_red_24dp"
                android:drawableLeft="@drawable/ic_place_red_24dp"
                android:drawablePadding="@dimen/dp_6" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_2"
                android:gravity="center_vertical|end"
                android:textColor="@color/black"
                android:textAppearance="?attr/textAppearanceListItemSmall"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvWarning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:background="@color/red_700"
                android:textAppearance="?attr/textAppearanceListItemSmall"
                android:layout_weight="10"
                android:drawableStart="@drawable/ic_alert_octagram_black"
                android:drawableLeft="@drawable/ic_alert_octagram_black"
                android:drawablePadding="@dimen/dp_6" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>